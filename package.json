{
  "name": "@bebophq/workspace",
  "version": "0.1.4",
  "description": "Bebop workspace - guardrails + context layer for AI coding agents",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "build:cli": "pnpm --filter @bebophq/cli build",
    "build:core": "pnpm --filter @bebophq/core build",
    "build:tui": "pnpm --filter @bebophq/tui build",
    "watch": "pnpm --filter './packages/**' watch",
    "test": "pnpm --filter './packages/**' test",
    "lint": "pnpm --filter './packages/**' lint",
    "lint:fix": "pnpm --filter './packages/**' lint:fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf packages/*/dist",
    "release": "standard-version",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "context",
    "token-optimization",
    "prompt-engineering",
    "cursor",
    "copilot",
    "claude",
    "gpt"
  ],
  "author": "Bebop Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bebophq/bebop.git"
  },
  "bugs": {
    "url": "https://github.com/bebophq/bebop/issues"
  },
  "homepage": "https://github.com/bebophq/bebop#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@10.28.2"
}
