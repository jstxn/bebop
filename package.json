{
  "name": "@bebophq/cli",
  "version": "0.1.0",
  "description": "Control-plane for agent sessions - reduce token usage by 90%+ with indirection and stateful execution",
  "main": "dist/index.js",
  "bin": {
    "bebop": "dist/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/postbuild.js",
    "watch": "tsc --watch",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e --testTimeout=60000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test",
    "release": "standard-version"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "context",
    "token-optimization",
    "prompt-engineering",
    "cursor",
    "copilot",
    "claude",
    "gpt"
  ],
  "author": "Bebop Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jstxn/bebop.git"
  },
  "bugs": {
    "url": "https://github.com/jstxn/bebop/issues"
  },
  "homepage": "https://github.com/jstxn/bebop#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "toml": "^3.0.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.10",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0"
  }
}
