{
  "name": "@bebophq/cli",
  "version": "0.1.4",
  "description": "Guardrails + context layer for AI coding agents: compile standards into constraint packs and auto-apply them across tools",
  "main": "dist/cli.js",
  "bin": {
    "bebop": "dist/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "context",
    "token-optimization",
    "prompt-engineering",
    "cursor",
    "copilot",
    "claude",
    "gpt"
  ],
  "author": "Bebop Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bebophq/cli.git"
  },
  "bugs": {
    "url": "https://github.com/bebophq/cli/issues"
  },
  "homepage": "https://github.com/bebophq/cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@bebophq/core": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
